		//buttonView.setLayout(new GridLayout(3,8));
		//buttonView.setLayout(new GridLayout(5,3));
		Container cp = jFrame.getContentPane();
		buttonView = new JPanel();
		buttonView.add(giveCandy);
		cp.add(buttonView);
		buttonView = new JPanel();
		buttonView.setLayout(new BoxLayout(buttonView,BoxLayout.Y_AXIS));
		buttonView.add(candyState);
		buttonView.add(openFile);
		buttonView.add(saveFile);
		buttonView.add(saveAnotherFile);
		buttonView.add(fileState);
		//cp.add(buttonView);
		
		//擺設畫面位置
		jFrame.add(gameViewTest,BorderLayout.NORTH); 
		jFrame.add(nickName,BorderLayout.CENTER);
